<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.isolomonik.trisho.fragments.DialogNewPurchaseFragment"
    android:orientation="vertical">



    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/etNewPurchaseName"
        android:hint="Purchase Name" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lvPurchaseNames"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0">

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/btnCancelNewPurchase"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="30dp" />

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="OK"
            android:id="@+id/btnOKNewPurchase"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="30dp" />
    </FrameLayout>

</LinearLayout>
